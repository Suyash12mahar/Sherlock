<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.example.sherlock">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Season1Activity">
            <intent-filter >
                <action android:name="android.intent.action.SERIES_EPISODES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".EpisodeItem" />
        <activity android:name=".EpisodeDetails" />
        <activity
            android:name=".EpisodesDetails"
            android:label="@string/title_activity_episodes_details"
            android:theme="@style/AppTheme" />
        <activity android:name=".ExpandableList" />
        <activity
            android:name=".ExpandableListView"
            android:label="@string/title_activity_expandable_list_view"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".SeriesDisplay"
            android:label="@string/title_activity_series_display"

            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>