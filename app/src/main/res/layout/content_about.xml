<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.example.sherlock.AboutActivity"
    tools:showIn="@layout/activity_about">
    <TextView
        android:id="@+id/ab_title"
        android:layout_alignParentTop="true"
        android:text="Sherlock"
        style="@style/Base.TextAppearance.AppCompat.Display3"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ab_detail"
        android:textAlignment="center"
        android:layout_below="@id/ab_title"
        android:text="Android App for MDG Droid Wars 2016"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Body1"/>
    <ImageView
        android:id="@+id/mdg_logo"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/ab_detail"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:src="@drawable/mdg_logo"
        />
    <TextView
        android:id="@+id/ab_submission"
        android:layout_below="@+id/mdg_logo"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submission by Suyash Mahar\n1st year ECE"
        />

</RelativeLayout>
