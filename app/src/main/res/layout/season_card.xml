<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <android.support.v7.widget.CardView
        android:id="@+id/season_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/card_season_radius"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/sc_series_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img_1_1"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/sc_series"
            android:layout_below="@+id/sc_series_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Series 1"
            android:padding="10dp"
            android:textSize="50dp"/>

        <TextView
            android:id="@+id/sc_ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:text="\u2605 5.5"
            android:layout_below="@+id/sc_series_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
